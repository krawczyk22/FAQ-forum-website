<!doctype html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>Log In</title>
		<meta name="description" content="form to add new books">
		<meta name="author" content="Mark Tyers">
		<link href="style.css" type="text/css" rel="stylesheet" />
	</head>
	<body>
		<header>
            <h1>The question is</h1>
            {{#each title}}
			    <h2>{{this.title}}</h2>
            {{/each}}
            <h3>The description is</h3>
            {{#each title}}
            <h4>{{this.description}}</h4>
            {{/each}}
		</header>
		<p>The answers</p>
		<ul>
			{{#each commentsfromdatabase}}
			<li>{{this.content}}</li>
			{{/each}}
		</ul>
        <p>Add comments here</p>
        <form action="/addComment?msg={{#each title}}{{this.id}}{{/each}}" method="post">
			<p>Content<br /><input type="text" name="content" placeholder="Your comment goes here" value=""></p>
			<p><input type="submit" value="Add comment"></p>
		</form>
	</body>
</html>